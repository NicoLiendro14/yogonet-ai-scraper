# Environment Variables Example File
# Rename to .env for local development

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service_account.json

# BigQuery Configuration
BIGQUERY_DATASET_ID=yogonet_news
BIGQUERY_TABLE_ID=scraped_articles

# Scraper Configuration
MAX_ARTICLES=10
HEADLESS=true
CHROME_OPTIONS=--no-sandbox --disable-dev-shm-usage --disable-gpu --headless

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
AI_ENABLED=true
AI_MODEL=gpt-3.5-turbo

CLOUD_RUN_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=yogonet-scraper-job
GCP_CREDENTIALS_SECRET_NAME=yogonet-scraper-credentials
ARTIFACT_REGISTRY_REPO=us-central1-docker.pkg.dev/your-gcp-project-id/scraper-repo
MEMORY_LIMIT=1Gi
CPU_LIMIT=1
TIMEOUT=600s 